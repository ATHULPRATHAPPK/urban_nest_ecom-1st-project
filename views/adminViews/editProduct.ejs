          <div class="container">
            <h2 class="mb-4">Add Product</h2>
          
            <form action="/admin/edit-product" method="post"  enctype="multipart/form-data" >
          
              <div class="col-md-8 mb-3">
                <label for="productName">Product Name:</label>
                <input type="text" class="form-control" id="productid" name="productName" value="<%= editDetail.productName %>" required>
              </div>
              <div class="col-md-8 mb-3">
                <label for="productName">Brand:</label>
                <input type="text" class="form-control" id="brandid" name="brandName" value="<%= editDetail.brandName %>" required>
              </div>
          
            
          
           
          
              <div class="form-floating">
                <textarea  name="discription" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                <label  for="floatingTextarea2">category discription :-</label>
              </div>
              <div class="col-md-8 mb-3">
                <label for="color">Color:</label>
                <input type="text" class="form-control" id="colorid" name="color" value="<%= editDetail.color %>" required>
              </div>
          
              <div class="col-md-8 mb-3">
                <label for="processor">Processor:</label>
                <input type="text" class="form-control" id="processorid" name="processor" value="<%= editDetail.processor %>" required>
              </div>
              <div class="col-md-8 mb-3">
                <label for="ram">Ram:</label>
                <input type="number" class="form-control" id="offerPrice" name="ram">
              </div>
              <div class="col-md-8 mb-3">
                <label for="internalStorage">Internal Storage:</label>
                <input type="text" class="form-control" id="internalStorageid"  value="<%= editDetail.processor %>" name="internalStorage" required>
              </div>
          
              <input type="hidden" name="subcategory" value="<%= editDetail.subcategory._id ? editDetail.subcategory._id.toString() : '' %>" >
              <input type="hidden" name="poductId" value="<%=editDetail._id %>">
              <div class="col-md-8 mb-3">
                <label for="quantity">Quantity:</label>
                <input type="number" class="form-control" id="quantityid" name="quantity" value="<%= editDetail.price %>"  required>
              </div>
              
              <div class="col-md-8 mb-3">
                <label for="price">Price:</label>
                <input type="number" class="form-control" id="priceid" name="price" value="<%= editDetail.quantity %>" required>
              </div>

  
              <div class="d-flex flex-wrap">
                <% for(let j=0 ; j < editDetail.productImage.length ; j++) { %>
                  <div class="card" style="width: 18rem; margin: 10px;">
                    <img src="/uploads/<%= editDetail.productImage[j].resizedFile %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title">Image<%= j+1 %></h5>
                      <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
                      <a  href="/product/delete-image?id=<%= editDetail._id %>&imageIndex=<%= j %>" class="btn btn-primary">Delete</a>
                    </div>
                  </div>
                <% } %>
              </div>
              

              
             
              <div class="col-md-8 mb-3">
                <label for="inputField">Product Image</label>&nbsp;&nbsp;&nbsp;&nbsp;
                <input type="file" id="productImages"  name="productImage" accept="image/*" multiple >
              </div>

