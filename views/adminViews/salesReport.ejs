    <script>
      document.addEventListener('DOMContentLoaded', function() {
          const generateMonthlyBtn = document.getElementById('generateMonthly');
          generateMonthlyBtn.addEventListener('click', function() {
              const monthSelect = document.getElementById('monthSelect');
              const selectedMonth = monthSelect.value;
              const form = document.createElement('form');
              form.setAttribute('method', 'post');
              form.setAttribute('action', '/generateMonthlyReport');
              const input = document.createElement('input');
              input.setAttribute('type', 'hidden');
              input.setAttribute('name', 'selectedMonth');
              input.setAttribute('value', selectedMonth);
              form.appendChild(input);
              document.body.appendChild(form);
              form.submit();
          });
      });
  </script>


