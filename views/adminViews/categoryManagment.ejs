<script>
  async function openSweetAlert(categoryId) {
    // Show SweetAlert modal with an input field
    const { value: percentage } = await Swal.fire({
      title: 'Enter Offer Percentage',
      input: 'text',
      inputLabel: 'Percentage',
      inputPlaceholder: 'Enter the offer percentage...',
      inputValidator: (value) => {
        // Validate if the value is between 0 and 100
        if (!value || isNaN(value) || parseFloat(value) < 0 || parseFloat(value) > 100) {
          return 'You need to enter a valid percentage between 0 and 100!';
        }
      }
    })

    // If the user entered a percentage value, call the ApplyOffer function
    if (percentage) {
      ApplyOffer(categoryId, percentage);
    }
  }

  async function ApplyOffer(categoryId, percentage) { 
  try {
    let response = await axios.post('applyOffer', { CatId: categoryId, Percentage: percentage });
    if (response.ok) {
      console.log('Offer applied successfully');
      // Reload the page upon successful application of the offer
      location.reload();
    } else {
      console.error('Error applying offer');
      location.reload();
    }
  } catch (error) {
    console.error('Error:', error);
  }
}
</script>

<script>
  function openSweetAlertEdit(categoryId, percentage) {
    Swal.fire({
      title: 'Edit Percentage',
      html: `<input id="percentageInput" class="swal2-input" type="number" min="0" max="100" value="${percentage}">`,
      showCancelButton: true,
      confirmButtonText: 'Update',
      showLoaderOnConfirm: true,
      preConfirm: () => {
        const newPercentage = document.getElementById('percentageInput').value;
        // Validate the new percentage value
        if (!newPercentage || isNaN(newPercentage) || parseFloat(newPercentage) < 0 || parseFloat(newPercentage) > 100) {
          Swal.showValidationMessage('You need to enter a valid percentage between 0 and 100!');
          return false; // Prevent closing the modal if validation fails
        }
        // Make an Axios request to the backend
        return axios.post('/editOffer', { categoryId, newPercentage })
          .then(response => {
            // Handle the response from the backend as needed
            console.log('Edit offer successful:', response.data);
            return response.data;
          })
          .catch(error => {
            // Handle errors from the backend
            console.error('Error editing offer:', error.response.data);
            Swal.showValidationMessage('Failed to update offer');
          });
      }
    }).then((result) => {
      // Show success message and reload the page if response is successful
      if (result.value) {
        Swal.fire('Success', 'Percentage updated successfully', 'success').then(() => {
          location.reload();
        });
      }
    });
  }
</script>



<script>
  function openSweetAlertDelete(categoryId) {
    Swal.fire({
      title: 'Remove Offer',
      text: 'Are you sure you want to remove this offer?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
