          <script>
              function validateAndShowConfirmation() {
                  const subcategoryInput = document.getElementById('subcategoryInput').value;
          
                  // Regular expression to check for symbols
                  const symbolRegex = /[^\w\s]/gi;
          
                  // Check if the input value contains symbols
                  if (symbolRegex.test(subcategoryInput)) {
                      Swal.fire({
                          title: 'Error',
                          text: 'Subcategory cannot contain symbols.',
                          icon: 'error',
                      });
                      return;
                  }
          
                  // Check if the input value is empty
                  if (subcategoryInput.trim() === "") {
                      Swal.fire({
                          title: 'Error',
                          text: 'Subcategory cannot be empty.',
                          icon: 'error',
                      });
                      return;
                  }
          
                  // If validation passes, show the confirmation dialog
                  showAddCategoryConfirmation();
              }
          
              function showAddCategoryConfirmation() {
                  Swal.fire({
                      title: 'Confirmation',
                      text: 'Are you sure you want to add this category?',
                      icon: 'question',
                      showCancelButton: true,
                      confirmButtonText: 'Yes, add it!',
                      cancelButtonText: 'No, cancel!',
                  }).then((result) => {
                      if (result.isConfirmed) {
                          // If the user clicks the Confirm button, submit the form
                          document.getElementById('addCategoryForm').submit();
                      }
                  });
              }
