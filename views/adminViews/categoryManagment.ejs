    }).then((result) => {
      if (result.isConfirmed) {
        // If confirmed, send Axios request to delete the offer
        axios.post('/offerDelete', { categoryId })
          .then(response => {
            console.log('Offer deleted successfully:', response.data);
            // Show success message
            Swal.fire('Deleted!', 'The offer has been removed.', 'success').then(() => {
              // Reload the page
              location.reload();
            });
          })
          .catch(error => {
            console.error('Error deleting offer:', error.response.data);
            // Show error message
            Swal.fire('Error', 'Failed to remove the offer.', 'error');
          });
      }
    });
  }
</script>

<script>
