            <p style="color: red;">Return Orders: <%= locals.totalRetuns %></p>
            <p style="color: red;">Delivered Orders: <%= locals.totalOrders %></p>
            <p style="color: red;">Cancelled Orders: <%= locals.cancelled %></p>
            <p style="color: red;">Pending Orders To Deliver: <%=locals.pendingToDeliverCount %></p>
            <script>
                // Get the canvas element
                const ctx = document.getElementById('myPieChart').getContext('2d');
                const returnd = '<%= locals.totalRetuns%>';
                const delivered = '<%= locals.totalOrders%>';
                const cancelled = "<%= locals.cancelled%>";
                const pendingToDelivery = "<%=locals.pendingToDeliverCount%>";
                // Define data for the pie chart
                const data = {
                    labels: ['Returns', 'Delivered', 'Cancelled', 'Pending to Deliver'],
                    datasets: [{
                        label: 'Orders',
                        data: [parseInt(returnd), parseInt(delivered), parseInt(cancelled), parseInt(pendingToDelivery)],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.5)', // Red for Returns
                            'rgba(54, 162, 235, 0.5)', // Blue for Delivered
                            'rgba(255, 205, 86, 0.5)', // Yellow for Cancelled
                            'rgba(90, 92, 192, 0.5)' // Green for Pending to Deliver
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 205, 86, 1)',
                            'rgba(90, 92, 192, 1)'
                        ],
                        borderWidth: 1
                    }]
                };
                // Create the pie chart
                const myPieChart = new Chart(ctx, {
                    type: 'pie',
                    data: data,
                    options: {
                        responsive: false,
                        maintainAspectRatio: false,
                        title: {
                            display: true,
                            text: 'Orders Status'
                        }
                    }
                });
            </script>
